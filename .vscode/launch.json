{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Angular",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMaps": true,
            "skipFiles": [
                "${workspaceFolder}/frontend/node_modules/**/*.js"
            ],
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/*",
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*",
                "/*": "*",
                "/./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "name": "Debug Angular (Existing Chrome)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMaps": true,
            "skipFiles": [
                "${workspaceFolder}/frontend/node_modules/**/*.js"
            ]
        }
    ]
}
